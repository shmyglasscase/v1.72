{
  "expo": {
    "name": "MyGlassCase",
    "slug": "myglasscase",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "myglasscase",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#22c55e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.myglasscase.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to take photos of your collection items.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select photos for your collection items.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save photos to your library."
      },
      "associatedDomains": [
        "applinks:myglasscase.app",
        "applinks:*.myglasscase.app"
      ],
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.myglasscase.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#22c55e"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "myglasscase.app",
              "pathPrefix": "/share"
            },
            {
              "scheme": "https",
              "host": "myglasscase.app",
              "pathPrefix": "/wishlist"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to take photos of collection items."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select images for your collection items."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#22c55e",
          "sounds": ["./assets/notification-sound.wav"]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "owner": "myglasscase"
  }
}
